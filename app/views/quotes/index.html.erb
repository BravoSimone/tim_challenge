<p style="color: green"><%= notice %></p>

<h1>Quotes</h1>

<%= link_to "New quote", new_quote_path %>

<div id="quotes" class="quotes">
  <% @quotes.each do |quote| %>
    <div>
      <%= render quote %>
      <p>
        <%= link_to "Show this quote", quote_path(quote, page: params[:page]) %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @quotes %>
